{
  "name": "react-native-atomic-ui",
  "version": "1.0.5",
  "description": "Zero-dependency atomic UI components library for React Native with built-in dark mode support",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "assets/fonts",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "npm run build:ts && npm run build:bundle",
    "build:ts": "tsc",
    "build:bundle": "node esbuild.config.js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:watch": "tsc --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run test -- --passWithNoTests"
  },
  "keywords": [
    "react-native",
    "ui",
    "components",
    "atomic",
    "theme",
    "dark-mode",
    "typescript",
    "zero-dependency"
  ],
  "author": "React Native Atomic UI Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tanmoythander/react-native-atomic-ui.git"
  },
  "bugs": {
    "url": "https://github.com/tanmoythander/react-native-atomic-ui/issues"
  },
  "homepage": "https://github.com/tanmoythander/react-native-atomic-ui#readme",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.73.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-native": {
      "optional": false
    }
  },
  "optionalDependencies": {
    "@react-native-community/datetimepicker": "^8.0.0",
    "@react-native-community/netinfo": "^11.0.0",
    "@react-native-documents/picker": "^10.0.0",
    "react-native-picker-select": "^9.0.0",
    "react-native-shimmer-placeholder": "^2.0.0",
    "react-native-webview": "^13.0.0"
  },
  "devDependencies": {
    "@react-native/eslint-config": "^0.73.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^29.5.0",
    "@types/react": "^19.0.0",
    "@types/react-native": "^0.73.0",
    "esbuild": "^0.27.2",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./theme": {
      "types": "./dist/theme/index.d.ts",
      "import": "./dist/theme/index.mjs",
      "require": "./dist/theme/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.mjs",
      "require": "./dist/components/index.js"
    },
    "./date-picker": {
      "types": "./dist/advanced/date-picker/index.d.ts",
      "import": "./dist/advanced/date-picker/index.mjs",
      "require": "./dist/advanced/date-picker/index.js"
    },
    "./picker": {
      "types": "./dist/advanced/picker/index.d.ts",
      "import": "./dist/advanced/picker/index.mjs",
      "require": "./dist/advanced/picker/index.js"
    },
    "./file-picker": {
      "types": "./dist/advanced/file-picker/index.d.ts",
      "import": "./dist/advanced/file-picker/index.mjs",
      "require": "./dist/advanced/file-picker/index.js"
    },
    "./rich-text": {
      "types": "./dist/advanced/rich-text/index.d.ts",
      "import": "./dist/advanced/rich-text/index.mjs",
      "require": "./dist/advanced/rich-text/index.js"
    },
    "./advanced": {
      "types": "./dist/advanced/index.d.ts",
      "import": "./dist/advanced/index.mjs",
      "require": "./dist/advanced/index.js"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "react-native": "src/index.ts"
}
